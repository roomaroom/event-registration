%table
  %thead
    %tr
      %th User
      %th Event
      %th Notice
      %th Payment
      %th Paid
      %th
      %th
      %th

  %tbody
    - @appointments.each do |appointment|

      %tr
        %td
          = simple_form_for(appointment) do |f|
            = f.error_notification
            .form-inputs
              = f.input :notice
            .form-actions
              = f.button :submit
        %td= appointment.event
        %td= appointment.notice
        %td= appointment.payment
        %td= appointment.paid
      /   %td= link_to 'Show', appointment
      /   %td= link_to 'Edit', edit_appointment_path(appointment)
      /   %td= link_to 'Destroy', appointment, :method => :delete, :data => { :confirm => 'Are you sure?' }
