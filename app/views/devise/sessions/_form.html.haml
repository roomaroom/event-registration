#form-olvidado{:style => "padding: 20px;"}
  = simple_form_for(:user, :url => session_path(:user), :html => { :role => 'form'}) do |f|
    %h4
      Увійти
    %fieldset
      .form-group.input-group
        %span.input-group-addon
          @
        = f.input :email, :autofocus => true, :placeholder => "Email", class: 'form-control', label: false, :type => "email"
      .form-group.input-group
        %span.input-group-addon
          %i.glyphicon.glyphicon-lock
        = f.input :password, class: 'form-control', :placeholder => "Password", :required => true, :type => "password", label: false
        /%input.form-control{:name => "password", :placeholder => "Password", :required => "", :type => "password", :value => ""}/
      .form-group
        %button.btn.btn-primary.btn-block{:type => "submit"}
          Увійти
        %p.help-block
          %a#olvidado.pull-right.text-muted{:href => "#{new_password_path(resource_name)}"}
            %small Забули пароль?
          / %a#olvidado2.pull-left.text-muted{:href => "#"}
          /   %small Signup!