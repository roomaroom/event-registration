#form-olvidado{:style => "padding: 20px;"}
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f|
    %h4
      Зареєструватися
    %fieldset
      .form-group.input-group
        %span.input-group-addon
          @
        = f.input :mobile, :autofocus => true, :placeholder => "Телефон", class: 'form-control', label: false
    %fieldset
      .form-group.input-group
        %span.input-group-addon
          @
        = f.input :name, :placeholder => "Ім'я і прізвище", class: 'form-control', label: false
      .form-group.input-group
        %span.input-group-addon
          @
        = f.input :email, :placeholder => "Email", class: 'form-control', label: false, :type => "email"
      .form-group.input-group
        %span.input-group-addon
          @
        = f.input :city, :placeholder => "Місто", class: 'form-control', label: false
      .form-group.input-group
        %span.input-group-addon
          @
        = f.input :level, :placeholder => "Ступінь", class: 'form-control', label: false
      .form-group.input-group
        %span.input-group-addon
          @
        = f.input :community, :placeholder => "Парафія або спільнота", class: 'form-control', label: false
      .form-group.input-group
        %span.input-group-addon
          %i.glyphicon.glyphicon-lock
        = f.input :password, class: 'form-control', :placeholder => "Введіть пароль", :required => true, :type => "password", label: false
      .form-group.input-group
        %span.input-group-addon
          %i.glyphicon.glyphicon-lock
        = f.input :password_confirmation, class: 'form-control', :placeholder => "Повторіть пароль", :required => true, :type => "password", label: false
      .form-group
        %button.btn.btn-primary.btn-block{:type => "submit"}
          Зареєструватися
        %p.help-block
          %a#olvidado.pull-right.text-muted{:href => "#{new_password_path(resource_name)}"}
            %small Увійти