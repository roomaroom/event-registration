!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'School'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'School'}"}
    %script{:src => "http://maps.googleapis.com/maps/api/js?sensor=false&libraries=places", :type => "text/javascript"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    = render 'layouts/navigation'
    .container
      %main{:role => "main"}
        = render 'layouts/messages'
        = yield

/ .container
/     %header
/       = render 'layouts/navigation'
/     %main{:role => "main"}
/       = render 'layouts/messages'
/       = yield
